@model ABCD_OnlineMall.Models.Movie

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminIndex.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Create new Movie</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Create</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form asp-action="Create" enctype="multipart/form-data">
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="Title"></label>
                                    <input asp-for="Title" class="form-control" placeholder="Enter movie name" required>
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Director"></label>
                                    <input asp-for="Director" class="form-control" placeholder="Enter director" required>
                                    <span asp-validation-for="Director" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Cast"></label>
                                    <input asp-for="Cast" class="form-control" placeholder="Enter cast" required>
                                    <span asp-validation-for="Cast" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Description"></label>
                                    <input asp-for="Description" class="form-control" placeholder="Enter description" required>
                                    <span asp-validation-for="Description" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Price"></label>
                                    <input asp-for="Price" class="form-control" placeholder="Enter price" required>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Duration"></label>
                                    <input asp-for="Duration" class="form-control" placeholder="Enter duration" required>
                                    <span asp-validation-for="Duration" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Trailer"></label>
                                    <input asp-for="Trailer" class="form-control" placeholder="Enter trailer link" required>
                                    <span asp-validation-for="Trailer" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="ImageName">Image Store</label>
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <input type="file" asp-for="ImageFile" class="custom-file-input" required>
                                            <label asp-for="ImageName" class="custom-file-label"></label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /.card-body -->

                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Create</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div>
                <a asp-action="Index" class="btn btn-info">Back to List</a>
            </div>
        </div>
    </section>
</div>