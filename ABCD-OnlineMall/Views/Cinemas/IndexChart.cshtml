@{ 
    Layout = "~/Views/Shared/_AdminIndex.cshtml";
}
<html>
<head>

    <!--Load the AJAX API-->
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    <script type="text/javascript">

      // Load the Visualization API and the corechart package.
      google.charts.load('current', {'packages':['corechart']});

      // Set a callback to run when the Google Visualization API is loaded.
      google.charts.setOnLoadCallback(drawChart);

      // Callback that creates and populates a data table,
      // instantiates the pie chart, passes in the data and
      // draws it.
      function drawChart() {

        // Create the data table.
        var data = new google.visualization.DataTable();
        data.addColumn('string', 'Movie');
        data.addColumn('number', 'Sales');
          data.addRows([
              ['@ViewBag.movie1', @ViewBag.sales1],
              ['@ViewBag.movie2', @ViewBag.sales2],
              ['@ViewBag.movie3', @ViewBag.sales3],
              ['@ViewBag.movie4', @ViewBag.sales4],
              ['@ViewBag.movie5', @ViewBag.sales5],
              ['@ViewBag.movie6', @ViewBag.sales6]
        ]);

        // Set chart options
        var options = {'title':'Movie Sales',
                       'width':1400,
                       'height':800};

        // Instantiate and draw our chart, passing in some options.
          var chart = new google.visualization.ColumnChart(document.getElementById('chart_div'));
        chart.draw(data, options);
      }
    </script>
</head>

<body>

    <!--Div that will hold the pie chart-->
    <div id="chart_div" style="width: 1200px; margin: 0 auto"></div>
</body>
</html>


