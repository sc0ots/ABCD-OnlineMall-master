    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.MovieId">Edit</a> |
        <a asp-action="Delete" asp-route-id="@Model.MovieId">Delete</a>
        <a asp-action="Index">Back to List</a>
    </div>
