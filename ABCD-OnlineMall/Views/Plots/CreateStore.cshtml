@model ABCD_OnlineMall.Models.Store

@{
    ViewData["Title"] = "CreateStore";
    Layout = "~/Views/Shared/_AdminIndex.cshtml";
}



<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Create Store</h1>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6">
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Create</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form asp-action="CreateStore" enctype="multipart/form-data">
                            <div class="card-body">
                                <div class="form-group">
                                    <label asp-for="StoreName"></label>
                                    <input class="form-control" asp-for="StoreName" placeholder="Enter Store name" required>
                                    <span asp-validation-for="StoreName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="OpenTime"></label>
                                    <input type="time" class="form-control" asp-for="OpenTime" required>
                                    <span asp-validation-for="OpenTime" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="CloseTime"></label>
                                    <input type="time" class="form-control" asp-for="CloseTime" required>
                                    <span asp-validation-for="CloseTime" class="text-danger"></span>

                                </div>
                                <div class="form-group">
                                    <label for="exampleInputFile">Image Store</label>
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <input type="file" asp-for="ImageFile" class="custom-file-input" id="exampleInputFile" required>
                                            <label class="custom-file-label" asp-for="ImageName"></label>
                                            <span asp-validation-for="ImageName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputFile">Image Promotion</label>
                                    <div class="input-group">
                                        <div class="custom-file">
                                            <input type="file" class="custom-file-input" asp-for="ImagePromo" required>
                                            <label class="custom-file-label" asp-for="PromoImageName"></label>
                                            <span asp-validation-for="PromoImageName" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="StoreAbout"></label>
                                    <input class="form-control" asp-for="StoreAbout" placeholder="Enter Store About" required>
                                    <span asp-validation-for="StoreAbout" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="StoreDescription">Store Description</label>
                                    <input class="form-control" asp-for="StoreDescription" placeholder="Enter Store Description" required>
                                    <span asp-validation-for="StoreDescription" class="text-danger"></span>

                                </div>
                                <div class="form-group">
                                    @{
                                        List<SelectListItem> listItems = new List<SelectListItem>();
                                        listItems.Add(new SelectListItem
                                        {
                                            Text = "Clothing",
                                            Value = "Clothing",
                                            Selected = true
                                        });
                                        listItems.Add(new SelectListItem
                                        {
                                            Text = "Food",
                                            Value = "Food"

                                        });
                                        listItems.Add(new SelectListItem
                                        {
                                            Text = "Other",
                                            Value = "Other"
                                        });
                                    }
                                    @Html.DropDownListFor(model => model.StoreCategory, listItems, "-- Select Status --")
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="form-group" hidden>
                                <label asp-for="PlotId" class="control-label"></label>
                                <select asp-for="PlotId" class="form-control" asp-items="ViewBag.PlotId"></select>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Create</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
